{
  "name": "500cats",
  "version": "1.0.0",
  "scripts": {
    "bootstrap": "createdb 500cats",
    "dev": "tsc && concurrently \"tsc --watch\" \"nodemon --watch server/**/*.js server -p $PORT\"",
    "start": "NODE_ENV=production node server",
    "build": "tsc && next build",
    "test": "tsc && jest",
    "test:watch": "tsc && jest --watch"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "jest": "^21.1.0",
    "next": "latest",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "@types/express": "^4.0.37",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/jest": "^21.1.0",
    "@types/next": "^2.4.2",
    "@types/react": "^15.0.1",
    "@types/supertest": "^2.0.3",
    "concurrently": "^3.1.0",
    "express": "^4.15.4",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0",
    "typescript": "^2.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx)"
    ]
  }
}
